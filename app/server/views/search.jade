
extends layout

block content

	#search-page.center-vertical
		h3.title Proffy
		br
		form(method='get', action='/search', style='display: inline-block')#search-form
			input(name='query', type='text', placeholder='Search')#search-bar
			button(type='submit')#search-button

		div#matches-box
			h5 Matches
			div#research-list
				if profs != null
					each prof in profs
						div.prof-block
							div(style='display: inline-block').prof-header
								div.prof-name
									= prof.name
								div.prof-major
									= prof.major
							div.prof-spec
								h4 Specializes in #{prof.spec}
							div.prof-desc
								h5= prof.desc

	include modals/alert
	include modals/lost-password

block scripts
	script(src='/vendor/jquery-2.2.3.min.js')
	script(src='/vendor/jquery.form.min.js')
	script(src='/vendor/bootstrap.min.js')
	script(src='/js/views/search.js')
	script(src='/js/controllers/searchController.js')
